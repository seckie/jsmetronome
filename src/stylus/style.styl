@charset "UTF-8"

@import "nib"

// sprite
//@import "sprite/sprite-main"

// original function & mixin
@import "_function"
@import "_mixin"

// reset
global-reset()
reset-html5()

// variables
$borderColor = #979797

html
  height 100%
  font-family "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro", Helvetica, Meiryo, "メイリオ", Osaka, 'ＭＳ Ｐゴシック', sans-serif
  font-size 10px
  line-height 1.5
body
  height 100%
  background-color transparent
img
  vertical-align bottom
*
  box-sizing border-box

input[type="text"]
button
  background-color #fff
  border 1px solid $borderColor
  border-radius 5px
  appearance normal
  padding 0
  &.error
    background-color #fcc

.app
  width 300px
  padding 20px
  background #D8D8D8
  border 3px solid $borderColor
  border-radius 5px

// tempo
.group-tempo
  position relative
  margin-bottom 20px
  clearfix()
.tempo
  display block
  width 100%
  margin-bottom 20px
  font(36, 42)
  text-align center
.btn-tempo
  display block
  width 112px
  height 34px
  overflow hidden
  font(24, 32)
  &.down
    float left
    border-top-right-radius 0
    border-bottom-right-radius 0
  &.up
    float right
    border-top-left-radius 0
    border-bottom-left-radius 0
  &.mode
    absolute top 0 left 50%
    width 34px
    height 34px
    margin-left -17px
    border-radius 0
    text-indent -9999px
    &.mode-trad
      background url("../img/trad.png") no-repeat 0 0
      background-size 32px 32px
    &.mode-one
      background url("../img/one.png") no-repeat 0 0
      background-size 32px 32px

// bell setting
.group-bell-setting
  margin-bottom 20px
  border 1px solid $borderColor
  border-radius 3px
  background-color #fff
  .row
    display block
    clearfix()
    &:first-child
      border-bottom 1px solid $borderColor
.btn-bell
  float left
  width 25%
  height 33px
  overflow hidden
  border 0
  border-right 1px solid $borderColor
  border-radius 0
  background-color transparent
  font(24, 32)
  &:last-child
    border-right 0
  &-active
    color #f33
    box-shadow inset 1px 1px 2px 0 $borderColor


// bell icons
.group-bell-icons
  margin-bottom 20px
  text-align center
  clearfix()

.bell-icon
  display inline-block
  width 16px
  height 16px
  margin 0 7px
  border-radius 8px
  background-color #979797
  vertical-align top
  &-top
    background-color #454545
  &-active
    background-color #D0021B

// start button
.btn-toggle
  display block
  width 100%
  font(24, 32)
  text-align center

