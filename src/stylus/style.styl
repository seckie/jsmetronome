@charset "UTF-8"

@import "nib"

// sprite
//@import "sprite/sprite-main"

// original function & mixin
@import "_function"
@import "_mixin"

// reset
global-reset()
reset-html5()

// variables
$borderColor = #979797

html
  height 100%
  background-color transparent
  font-family "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro", Helvetica, Meiryo, "メイリオ", Osaka, 'ＭＳ Ｐゴシック', sans-serif
  font-size 10px
  line-height 1.5
body
  height 100%
  background-color transparent
  -webkit-app-region drag
img
  vertical-align bottom
*
  box-sizing border-box

input[type="text"]
button
  background-color #fff
  border 1px solid $borderColor
  border-radius 5px
  appearance normal
  padding 0
  &.error
    background-color #fcc

.app
  width 300px
  padding 20px
  background #D8D8D8
  border 3px solid $borderColor
  border-radius 5px

// tempo
.group-tempo
  position relative
  margin-bottom 20px
  clearfix()
.tempo
  display block
  width 100%
  margin-bottom 20px
  font(36, 42)
  text-align center
.btn-tempo
  display block
  width 112px
  height 34px
  overflow hidden
  font(24, 32)
  &.down
    float left
    border-top-right-radius 0
    border-bottom-right-radius 0
  &.up
    float right
    border-top-left-radius 0
    border-bottom-left-radius 0
  &.mode
    absolute top 0 left 50%
    width 34px
    height 34px
    margin-left -17px
    border-radius 0
    text-indent -9999px
    &.mode-trad
      background url("../img/trad.png") no-repeat 0 0
      background-size 32px 32px
    &.mode-one
      background url("../img/one.png") no-repeat 0 0
      background-size 32px 32px

// bell setting
.group-bell-setting
  margin-bottom 20px
  border 1px solid $borderColor
  border-radius 5px
  background-color #fff
  .row
    display block
    clearfix()
    &:first-child
      border-bottom 1px solid $borderColor
.btn-bell
  float left
  width 25%
  height 33px
  overflow hidden
  border 0
  border-right 1px solid $borderColor
  border-radius 0
  background-color transparent
  font(24, 32)
  &:last-child
    border-right 0
  &-active
    color #f33
    box-shadow inset 1px 1px 2px 0 $borderColor

// resolution setting
.resolution-setting
  margin-bottom 20px
  border 1px solid $borderColor
  border-radius 5px
  background-color #fff
  clearfix()
  &-button
    float left
    width 33.3%
    padding 3px 0
    border 0
    border-right 1px solid $borderColor
    border-radius 0
    background-color transparent
    &:last-child
      border-right 0
    &-active
      color #f33
      box-shadow inset 1px 1px 2px 0 $borderColor
      svg
        fill red
    svg
      height 26px
      vertical-align top


// bell icons
.group-bell-icons
  margin-bottom 20px
  padding 0 0 0 4%
  border-radius 5px
  background-color black
  overflow hidden
  clearfix()

.bell-icon
  display block
  position relative
  float left
  width 6%
  height 20px
  background-color black
  span
    display block
    position absolute
    top 50%
    left 50%
    width 4px
    height 4px
    margin -2px 0 0 -2px
    border-radius 2px
    background-color #ccc

  &:nth-of-type(4n+1)
    span
      background-color #999
      width 8px
      height 8px
      margin -4px 0 0 -4px
      border-radius 4px
  &-top
    span
      background-color #fff !important
  &-active
    span
      background-color #D0021B !important

// start button
.btn-toggle
  display block
  width 100%
  font(24, 32)
  text-align center

